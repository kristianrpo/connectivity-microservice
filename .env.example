# ==============================================================================
# EXTERNAL CONNECTIVITY MICROSERVICE - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ==============================================================================
# CORE SETTINGS
# ==============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,web,0.0.0.0
APP_ENV=development

# ==============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================================================
# PostgreSQL Container Settings
POSTGRES_DB=connectivity_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Django Database Connection
# Use DATABASE_URL format: postgresql://user:password@host:port/database
# For local development with docker-compose:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/connectivity_db

# ==============================================================================
# RABBITMQ CONFIGURATION
# ==============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=connectivity

# RabbitMQ Queue Names and Routing Keys
RABBITMQ_DOCUMENT_AUTH_QUEUE=document.authentication.requested
RABBITMQ_DOCUMENT_AUTH_ROUTING_KEY=document.authentication.requested
RABBITMQ_AUTH_USER_REGISTERED_QUEUE=auth.user.registered
RABBITMQ_AUTH_USER_REGISTERED_ROUTING_KEY=auth.user.registered

# ==============================================================================
# EXTERNAL API CONFIGURATION (Govcarpeta Centralizer)
# ==============================================================================
EXTERNAL_GOVCARPETA_API_URL=https://govcarpeta-apis-4905ff3c005b.herokuapp.com
EXTERNAL_GOVCARPETA_API_KEY=
EXTERNAL_API_TIMEOUT=30

# ==============================================================================
# AUTH MICROSERVICE INTEGRATION (OAuth2 Client Credentials)
# ==============================================================================
# JWT secret key shared with auth-microservice (MUST be the same)
AUTH_SERVICE_JWT_SECRET=your-shared-jwt-secret-change-this-in-production
AUTH_SERVICE_JWT_ALGORITHM=HS256

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ==============================================================================
# API THROTTLING
# ==============================================================================
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# ==============================================================================
# SECURITY SETTINGS (Production)
# ==============================================================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=INFO
TIME_ZONE=UTC

{
  "uid": "connectivity-microservice",
  "title": "Connectivity Microservice - Overview",
  "tags": ["connectivity", "microservice", "django"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "type": "graph",
      "title": "API Request Rate (excl. health checks)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(django_http_requests_total_by_view_transport_method_total{view!~\".*health.*\"}[5m])",
          "legendFormat": "{{method}} {{view}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": null, "logBase": 1, "max": null, "min": 0, "show": true},
        {"format": "short", "label": null, "logBase": 1, "max": null, "min": null, "show": true}
      ]
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "type": "graph",
      "title": "Response Time (p95)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(django_http_requests_latency_seconds_by_view_method_bucket{view!~\".*health.*\"}[5m]))",
          "legendFormat": "{{view}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "s", "label": null, "logBase": 1, "max": null, "min": 0, "show": true},
        {"format": "short", "label": null, "logBase": 1, "max": null, "min": null, "show": true}
      ]
    },
    {
      "id": 3,
      "gridPos": {"h": 5, "w": 8, "x": 0, "y": 8},
      "type": "singlestat",
      "title": "Total API Requests (24h)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(increase(django_http_requests_total_by_view_transport_method_total{view!~\".*health.*\"}[24h])) or vector(0)",
          "refId": "A"
        }
      ],
      "format": "none",
      "valueName": "current",
      "colors": ["#299c46", "#e0b400", "#bf1b00"],
      "thresholds": "",
      "sparkline": {
        "show": true,
        "lineColor": "rgb(31, 120, 193)",
        "fillColor": "rgba(31, 118, 189, 0.18)"
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 5, "w": 8, "x": 8, "y": 8},
      "type": "singlestat",
      "title": "Citizen Validations (24h)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(increase(django_http_requests_total_by_view_transport_method_total{view=~\".*check.*citizen.*\"}[24h])) or vector(0)",
          "refId": "A"
        }
      ],
      "format": "none",
      "valueName": "current",
      "colors": ["#299c46", "#e0b400", "#bf1b00"],
      "thresholds": "",
      "sparkline": {
        "show": true,
        "lineColor": "rgb(31, 120, 193)",
        "fillColor": "rgba(31, 118, 189, 0.18)"
      }
    },
    {
      "id": 5,
      "gridPos": {"h": 5, "w": 8, "x": 16, "y": 8},
      "type": "singlestat",
      "title": "Service Status",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"connectivity-service\"}",
          "refId": "A"
        }
      ],
      "format": "none",
      "valueName": "current",
      "valueMaps": [
        {"value": "0", "text": "DOWN"},
        {"value": "1", "text": "UP"}
      ],
      "colors": ["#bf1b00", "#e0b400", "#299c46"],
      "thresholds": "0.5,1",
      "colorBackground": true
    },
    {
      "id": 6,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 13},
      "type": "graph",
      "title": "HTTP Status Codes (excl. health)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(django_http_responses_total_by_status_total{status=~\"2..\",view!~\".*health.*\"}[5m])",
          "legendFormat": "2xx Success",
          "refId": "A"
        },
        {
          "expr": "rate(django_http_responses_total_by_status_total{status=~\"4..\",view!~\".*health.*\"}[5m])",
          "legendFormat": "4xx Client Error",
          "refId": "B"
        },
        {
          "expr": "rate(django_http_responses_total_by_status_total{status=~\"5..\",view!~\".*health.*\"}[5m])",
          "legendFormat": "5xx Server Error",
          "refId": "C"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": null, "logBase": 1, "max": null, "min": 0, "show": true},
        {"format": "short", "label": null, "logBase": 1, "max": null, "min": null, "show": true}
      ]
    },
    {
      "id": 7,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 13},
      "type": "graph",
      "title": "Database Operations",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(django_db_execute_total[5m])",
          "legendFormat": "{{vendor}} - {{alias}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "ops", "label": null, "logBase": 1, "max": null, "min": 0, "show": true},
        {"format": "short", "label": null, "logBase": 1, "max": null, "min": null, "show": true}
      ]
    },
    {
      "id": 8,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 21},
      "type": "graph",
      "title": "Memory Usage (MB)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"connectivity-service\"} / 1024 / 1024",
          "legendFormat": "Resident Memory",
          "refId": "A"
        },
        {
          "expr": "process_virtual_memory_bytes{job=\"connectivity-service\"} / 1024 / 1024",
          "legendFormat": "Virtual Memory",
          "refId": "B"
        }
      ],
      "yaxes": [
        {"format": "mbytes", "label": null, "logBase": 1, "max": null, "min": 0, "show": true},
        {"format": "short", "label": null, "logBase": 1, "max": null, "min": null, "show": true}
      ]
    },
    {
      "id": 9,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 21},
      "type": "graph",
      "title": "Database Query Duration",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(django_db_query_duration_seconds_sum[5m]) / rate(django_db_query_duration_seconds_count[5m])",
          "legendFormat": "Avg Query Time",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "s", "label": null, "logBase": 1, "max": null, "min": 0, "show": true},
        {"format": "short", "label": null, "logBase": 1, "max": null, "min": null, "show": true}
      ]
    },
    {
      "id": 10,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 29},
      "type": "graph",
      "title": "API Endpoint Breakdown",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(django_http_requests_total_by_view_transport_method_total{view!~\".*health.*\"}[5m])",
          "legendFormat": "{{view}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": null, "logBase": 1, "max": null, "min": 0, "show": true},
        {"format": "short", "label": null, "logBase": 1, "max": null, "min": null, "show": true}
      ]
    },
    {
      "id": 11,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 29},
      "type": "stat",
      "title": "Service Health Status",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"connectivity-service\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 1, "color": "green"}
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "DOWN"},
                "1": {"text": "UP"}
              }
            }
          ]
        }
      }
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"]
  }
}
